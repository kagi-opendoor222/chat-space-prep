.sidebar
  .top
    .top__name
      %h2
        = current_user.name
    %ul.top__list
      %li
        / %a{:href => "#"}
        /   = fa_icon "edit"
        = link_to new_group_path do
          = fa_icon "edit"
      %li
        = link_to edit_user_path(current_user) do
          = fa_icon "cog"
  .chatgroups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "group-link" do
        .chatgroup
          .chatgroup__name
            = group.name
          .chatgroup__message
